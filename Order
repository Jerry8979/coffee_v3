    public void onCheckboxClicked(View view){
        boolean checked = ((CheckBox) view).isChecked();
        for(int i=3; i<6; i++){
            if(view.getId() == all_id[i]){
                coffee.setCoffeeSelected(i, checked);
            }
        }
        total.setText("Total Price:" + String.format("%.2f",calculate_total()));
    }

